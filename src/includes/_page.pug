doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        title= title || 'Page name'

        // Styles::Start
        include _loadCss
        // Styles::End

        // Yandex Map
        if yandexMap == true
            script(src="https://api-maps.yandex.ru/2.1/?lang=ru_RU")

    body(class= bodyClass ? bodyClass : '')

        #page

            #jump-to-menu

            #arrow.arrow-up Листайте вправо
                svg(width="25" height="20.44" viewBox="0 0 37 45" fill="none" xmlns="http://www.w3.org/2000/svg")
                    path(d="M37 22.5L0.208008 45L7.16651 22.033L0.208008 0L37 22.5Z" fill="white")

            // Main::Start
            main#main.main-swiper
                block main
            // Main::End

        // Scripts::Start
        include _loadScripts
        // Scripts::End